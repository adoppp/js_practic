{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,         // <- поддержка старых JS-файлов
    "checkJs": false,        // <- можно включить, если хочешь типы в .js
    "noEmitOnError": true
  },
  "include": ["src"]
}
